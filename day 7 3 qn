
Q3.C Program to check grade of a student based on marks (A, B, C, Fail)
#include <stdio.h>

int main() {
    int marks;
    printf("Enter marks: ");
    scanf("%d", &marks);
    if (marks >= 75) {
        printf("Grade: A\n");
    } 
    else if (marks >= 60) {
        printf("Grade: B\n");
    } 
    else if (marks >= 40) {
        printf("Grade: C\n");
    } 
    else {
        printf("Grade: Fail\n");
    }

    return 0;
}